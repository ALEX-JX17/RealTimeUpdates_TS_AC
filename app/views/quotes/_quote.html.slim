    .quote
        = link_to quote.name, quote_path(quote), data: { turbo_frame: "_top" }
        .quote__actions
            = link_to "Edit",\
                edit_quote_path(quote),\
                class: "btn btn--light"
            = button_to "Delete",\
                # quote_path(quote),\
                quote,\
                method: :delete,\
                data: {turbo_method: :delete},\
                class: "btn btn--light"
                